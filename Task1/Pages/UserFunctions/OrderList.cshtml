<script>
    $(document).ready(function () {
        getInvoices();
    });

    function getInvoices() {
        $.ajax({
            type: "GET",
            url: "/api/Invoices/GetInvoices",
            dataType: "json",
            success: function (data) {
                var invoiceData = data;
                var newData = invoiceData.data;

                for (i = 0; i < newData.length; i++) {
                    var markup = "<tr><td>" + newData[i].invoiceNo + "</td><td>" + newData[i].customerRefId + "</td><td>" + newData[i].invoiceDate + "</td><td>" + newData[i].referenceNo + "</td><td>" + newData[i].note + "</td><td>" + newData[i].totalExcl + "</td><td>" + newData[i].totalTax + "</td><td>" + newData[i].totalIncl + "</td></tr>";
                    $("table tbody").append(markup);
                }
            },

            failure: function (data) {
                console.log("failure");
            },

            error: function (data) {
                console.log("error");
            }

        });
    }
</script>





